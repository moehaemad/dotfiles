#Lockscreen with fancy wallpaper
bindsym Control+g exec i3lock -i ~/Pictures/LockPicture.png -c 000000

#Pulse Audio Controls
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +5% #increase sound
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -5% #decrease sound
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle #mute sound

#set background paper on every start of i3
exec_always feh --bg-fill /home/$USER/Pictures/Background.jpg

#Enable transparency for the terminal
exec_always compton --config ~/.config/compton/compton.conf

#Gives all install packages like through snap or available in gui with XFCE or whatever desktop installed
bindsym $mod+o exec i3-dmenu-desktop

#If there's a second monitor (which I use at home) then connect it
#exec xrandr --output HDMI-0 --auto --right-of eDP-1-1
exec_always xrandr --output HDMI-1-0 --auto --output DP-1-3 --auto --right-of HDMI-1-0 --output eDP-1 --auto --right-of DP-1-3

# Sreen brightness controls #TODO: ADD xrandr --output eDP-1-1 --brightness 0.8 after testing on
#gateway laptop
